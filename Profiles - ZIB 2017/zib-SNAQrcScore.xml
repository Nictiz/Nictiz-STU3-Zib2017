        <valueSetReference>
          <reference value="http://decor.nictiz.nl/fhir/ValueSet/2.16.840.1.113883.2.4.3.11.60.40.2.4.29.3--20171231000000" />
        </valueSetReference>
      </binding>
      <mapping>
        <identity value="hcim-SNAQrcScore-v1.0-2017EN" />
        <map value="NL-CM:4.29.5" />
        <comment value="BMIScore" />
      </mapping>
    </element>
