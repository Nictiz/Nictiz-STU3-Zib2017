            </searchParam>
            <!-- *** familySituationChild / parentCarer -->
            <searchParam>
                <name value="Observation:parentCarer:RelatedPerson" /> <!-- *** nl-core-relatedperson -->
                <type value="token" />
            </searchParam>
            <!-- *** familySituationChild / sibling -->
            <searchParam>
                <name value="Observation:sibling:RelatedPerson" /> <!-- *** nl-core-relatedperson -->
