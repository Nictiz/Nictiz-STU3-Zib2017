            </searchParam>
            <searchParam>
                <name value="code" />
                <type value="token" />
            </searchParam>
        </resource>
        <resource>
            <type value="CarePlan" />
            <interaction>
                <code value="search-type" />
            </interaction>
            <searchParam>
                <name value="patient" />
                <type value="reference" />
            </searchParam>
            <searchParam>
                <name value="category" />
                <type value="token" />
            </searchParam>
        </resource>
        <resource>
            <type value="CareTeam" />
