            <interaction>
                <code value="create"/>
            </interaction>
            <searchParam>
                <name value="created"/>
                <type value="date"/>
            </searchParam>
            <searchParam>
                <name value="status"/>
                <type value="token"/>
            </searchParam>
        </resource>
        <resource>
            <type value="DocumentReference"/>
            <interaction>
                <code value="search-type"/>
            </interaction>
            <interaction>
                <code value="create"/>
            </interaction>
            <searchParam>
                <name value="status"/>
                <type value="token"/>
            </searchParam>
            <searchParam>
                <name value="indexed"/>
                <type value="date"/>
            </searchParam>
